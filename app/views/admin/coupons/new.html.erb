<div class="well text-center">
  <%= form_for [:admin, @coupon] do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.label :expire_at %><br />
      <%= f.text_field :expire_at, type: :date, required: true %>
    </div>

    <div class="field">
      <%= f.label :discount %><br />
      <%= f.text_field :discount, type: :decimal, required: true %>
    </div>

    <div class="field">
      <%= f.submit %>
    </div>
  <% end %>
</div>
