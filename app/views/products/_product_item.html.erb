<div class="well productItem">
  <div class="row">
    <p class="col-sm-8"><%= product.title.capitalize%></p>
    <p class="col-sm-4 productPrice"><%= product.price%>$</p>
  </div>
  <%= image_tag(product_image(product), class: "productThumbnail")%>
  <div class="productActions">
    <%= link_to "Details", product_path(product), class: "btn btn-sm btn-info"%>
    <% if product.user_id == current_user.id%>
      <%= link_to "Edit", edit_product_path(product), class: "btn btn-sm btn-warning"%>
      <%= link_to "Delete",  product_path(product), method: :delete, data: { confirm: "You Sure?"}, class: "btn btn-sm btn-danger"%>
    <% end %>
  </div>
</div>
