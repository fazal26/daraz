<%= form_for [@product, @comment], remote: true do |f| %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= image_tag(user_image(current_user) , class: "commentImage")%>
  <%= f.text_field :body, id: "comment_body", class: "newCommentBody", placeholder:"Type your message..."%>
  <%= f.submit "Comment", style:"display:none"%>
<% end %>