<div class="row noHorizontalScroll">
	<div class="col-sm-4"></div>
	<div class="login-dark p-3 shadow-lg rounded col-sm-4">
		<div class="pt-1"><h2 class="text-center">Sign In</h2></div>
		<%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"mt-5") do |f| %>
			<div class="field">
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group form-control form-control-sm bg-light", placeholder: "Email" %>
			</div>

			<div class="field">
				<%= f.password_field :password, autocomplete: "current-password", class: "form-group form-control form-control-sm bg-light", placeholder: "Password" %>
			</div>

			<% if devise_mapping.rememberable? %>
				<div class="field">
					<%= f.check_box :remember_me %>
					<%= f.label :remember_me%>
				</div>
			<% end %>

			<div class="actions">
				<%= f.submit "Log In" ,class:"btn btn-sm btn-light col"%>
			</div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
	<div class="col-sm-4"></div>
</div>
