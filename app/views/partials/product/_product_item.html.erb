<%= link_to "Show Product", user_product_path(current_user,product), class: "btn btn-warning"%>
<% if product.user_id == current_user.id%>
  <div style="text-align:center">
    <%= link_to "Edit Product", edit_user_product_path(current_user,product), class: "btn btn-warning"%>
  </div>
<% end %>
<br>
<div class = "well">
  <div class = "row">
    <div class = "col-sm-7">
      <div class = "row">
        <div class = col-sm-4>
          <h3>Title: </h3>
          <h3>Price: </h3>
        </div>
        <div class = col-sm-8>
          <h3><%= product.title%></h3>
          <h3><%= product.price%></h3>
        </div>
      </div>
    </div>
    <div class = "col-sm-5">
      <%= image_tag(product_image(product) , style: "width:20vw", class: "img-rounded")%>
    </div>
  </div>
</div>