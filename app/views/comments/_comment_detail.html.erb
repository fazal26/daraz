<div class="message-wrap" id=<%= comment.id%>>
	<div class="msg-wrap">
		<div class="media msg ">
			<a class="pull-left" href="#">
				<img class="media-object"  src="">
				<%= image_tag(user_image(comment.user), class: "media-object", style:"width: 32px; height: 32px;")%>
			</a>
			<div class="media-body">
				<small class="pull-right time"><%= time_ago_in_words comment.created_at%><i class="fa fa-clock-o"></i>
				<a href= "<%= edit_product_comment_path(product, comment)%>" data-remote="true">- Edit</a>
				<span onclick="remove(<%=comment.id%>)">
					<%= link_to "- Delete", product_comment_path(product, comment), method: :delete, data: { confirm: "You Sure?"}%>
				</span>
				</small>
				<h5 class="media-heading"><%= comment.user.username %></h5>
				<small class="col-lg-10"><%= comment.body %></small>
			</div>
		</div>
	</div>
</div>
